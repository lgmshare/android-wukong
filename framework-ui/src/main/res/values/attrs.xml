<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- 圆形图片 -->
    <declare-styleable name="CircleImageView">
        <attr name="border_width" format="dimension"/>
        <attr name="border_color" format="color"/>
    </declare-styleable>
    <!-- 左右循环滚动控件 -->
    <declare-styleable name="ViewFlow">
        <attr name="vfSideBuffer" format="integer"/>
    </declare-styleable>
    <declare-styleable name="CircleFlowIndicator">
        <attr name="activeColor" format="color"/>
        <attr name="inactiveColor" format="color"/>
        <attr name="radius" format="dimension"/>
        <attr name="spacing" format="dimension"/>
        <attr name="centered" format="boolean"/>
        <attr name="fadeOut" format="integer"/>
        <attr name="inactiveType">
            <flag name="stroke" value="0"/>
            <flag name="fill" value="1"/>
        </attr>
        <attr name="activeType">
            <flag name="stroke" value="0"/>
            <flag name="fill" value="1"/>
        </attr>
        <attr name="snap" format="boolean"/>
    </declare-styleable>
    <!-- Fragment标题指示 -->
    <declare-styleable name="PagerSlidingTabStrip">
        <attr name="pstsIndicatorColor" format="color"/>
        <attr name="pstsUnderlineColor" format="color"/>
        <attr name="pstsDividerColor" format="color"/>
        <attr name="pstsSelectedTabTextColor" format="color"/>
        <attr name="pstsIndicatorHeight" format="dimension"/>
        <attr name="pstsUnderlineHeight" format="dimension"/>
        <attr name="pstsDividerPadding" format="dimension"/>
        <attr name="pstsTabPaddingLeftRight" format="dimension"/>
        <attr name="pstsScrollOffset" format="dimension"/>
        <attr name="pstsTabBackground" format="reference"/>
        <attr name="pstsShouldExpand" format="boolean"/>
        <attr name="pstsTextAllCaps" format="boolean"/>
        <attr name="pstsIsDraw" format="boolean"/>
    </declare-styleable>
    <!-- AbstractWheelView -->
    <declare-styleable name="AbstractWheelView">
        <attr name="visibleItems" format="integer"/>
        <attr name="isAllVisible" format="boolean"/>
        <attr name="itemOffsetPercent" format="integer"/>
        <attr name="itemsPadding" format="dimension"/>
        <attr name="selectionDividerDimmedAlpha" format="integer"/>
        <attr name="selectionDividerActiveAlpha" format="integer"/>
        <attr name="selectionDivider" format="reference"/>
        <attr name="itemsDimmedAlpha" format="integer"/>
        <attr name="isCyclic" format="boolean"/>
        <attr name="abstractWheelViewStyle" format="reference"/>
    </declare-styleable>
    <declare-styleable name="WheelVerticalView">
        <attr name="selectionDividerHeight" format="dimension"/>
    </declare-styleable>
    <declare-styleable name="WheelHorizontalView">
        <attr name="selectionDividerWidth" format="dimension"/>
    </declare-styleable>

    <!-- ImageCropImageView图片裁剪 -->
    <declare-styleable name="ImageCropImageView">
        <attr name="guidelines">
            <enum name="on" value="2"/>
            <enum name="onTouch" value="1"/>
            <enum name="off" value="0"/>
        </attr>
        <attr name="fixAspectRatio" format="boolean"/>
        <attr name="aspectRatioX" format="integer"/>
        <attr name="aspectRatioY" format="integer"/>
        <attr name="imageResource" format="reference"/>
    </declare-styleable>

    <declare-styleable name="StateButton">
        <!--text color-->
        <attr name="sbNormalTextColor" format="color|reference"/>
        <attr name="sbPressedTextColor" format="color|reference"/>
        <attr name="sbUnableTextColor" format="color|reference"/>
        <!--stroke width and color, dash width, dash gap-->
        <attr name="sbStrokeDashWidth" format="dimension|reference"/>
        <attr name="sbStrokeDashGap" format="dimension|reference"/>
        <attr name="sbNormalStrokeWidth" format="dimension|reference"/>
        <attr name="sbPressedStrokeWidth" format="dimension|reference"/>
        <attr name="sbUnableStrokeWidth" format="dimension|reference"/>
        <attr name="sbNormalStrokeColor" format="color|reference"/>
        <attr name="sbPressedStrokeColor" format="color|reference"/>
        <attr name="sbUnableStrokeColor" format="color|reference"/>
        <!--background color-->
        <attr name="sbNormalBackgroundColor" format="color|reference"/>
        <attr name="sbPressedBackgroundColor" format="color|reference"/>
        <attr name="sbUnableBackgroundColor" format="color|reference"/>
        <!--background radius-->
        <attr name="sbRadius" format="dimension|reference"/>
        <attr name="sbRound" format="boolean|reference"/>
        <!--animation duration-->
        <attr name="sbAnimationDuration" format="integer|reference"/>
    </declare-styleable>
</resources>