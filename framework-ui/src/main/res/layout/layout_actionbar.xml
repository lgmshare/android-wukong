<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/actionbar_layout"
                style="@style/ActionBarBackground"
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="@dimen/actionbar_height">

    <ImageView
        android:id="@+id/actionbar_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone"
        tools:ignore="ContentDescription"/>

    <TextView
        android:id="@+id/actionbar_title"
        style="@style/ActionBarTitle"
        android:layout_centerInParent="true"
        android:text="@string/app_name"
        android:visibility="visible"/>

    <Button
        android:id="@+id/actionbar_left_btn"
        style="@style/ActionBarButton"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:text="@string/back"
        android:visibility="visible"/>

    <ImageButton
        android:id="@+id/actionbar_left_img"
        style="@style/ActionBarButton"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:background="@drawable/bg_transparent_white_selector"
        android:contentDescription="@string/app_name"
        android:src="@drawable/actionbar_back_selector"
        android:visibility="visible"/>

    <FrameLayout
        android:id="@+id/actionbar_right"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true">

        <Button
            android:id="@+id/actionbar_right_btn"
            style="@style/ActionBarButton"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/bg_transparent_white_selector"
            android:text="@string/sure_exit"
            android:visibility="visible"/>

        <ImageButton
            android:id="@+id/actionbar_right_img"
            style="@style/ActionBarButton"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/bg_transparent_white_selector"
            android:contentDescription="@string/app_name"
            android:src="@drawable/ic_launcher"
            android:visibility="visible"/>

        <TextView
            android:id="@+id/actionbar_right_tips"
            style="@style/ts_white_12"
            android:layout_width="@dimen/actionbar_tips_width"
            android:layout_height="@dimen/actionbar_tips_height"
            android:layout_marginRight="8dp"
            android:layout_gravity="right"
            android:layout_marginTop="8dp"
            android:background="@drawable/actionbar_tips_bg"
            android:gravity="center"
            android:text="99"
            android:visibility="visible"/>

    </FrameLayout>

    <ImageButton
        android:id="@+id/actionbar_right_img2"
        style="@style/ActionBarButton"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/actionbar_right"
        android:background="@drawable/bg_transparent_white_selector"
        android:contentDescription="@string/app_name"
        android:src="@drawable/ic_launcher"
        android:visibility="visible"/>

    <View
        android:id="@+id/actionbar_bottom_line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/actionbar_bottom_line"
        android:layout_alignParentBottom="true"
        android:background="@color/actionbar_bottom_line"/>
</RelativeLayout>