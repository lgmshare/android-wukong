<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/common_list_bg"
                android:paddingBottom="14dp"
                android:paddingTop="4dp">

    <LinearLayout
        android:id="@+id/ll_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:background="@drawable/dialog_bg"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ll_exception"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="visible">

            <TextView
                android:id="@+id/tv_exception"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="10dp"
                android:text="异常：妈妈喊我回去吃饭了。"
                android:textColor="#fc6060"
                android:textSize="@dimen/ts_16"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/common_line_height"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:background="@color/common_text_tips"/>
        </LinearLayout>

        <FrameLayout
            android:id="@+id/ll_new"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            android:layout_marginTop="12dp">

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/common_line_height"
                android:layout_gravity="center_vertical"
                android:background="@color/cyan_0097a7"/>

            <TextView
                android:id="@+id/tv_new_tip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@color/white"
                android:gravity="center"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:text="新订单"
                android:textColor="@color/red_c62828"
                android:textSize="16sp"
                android:visibility="visible"/>

        </FrameLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginTop="12dp">

            <TextView
                android:id="@+id/tv_order_source"
                style="@style/ts_99_20"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="3dp"
                android:layout_toLeftOf="@+id/rl_price"
                android:drawableLeft="@drawable/icon_phone"
                android:drawablePadding="6dp"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:text="配送时间1小时30分"/>

            <RelativeLayout
                android:id="@+id/rl_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_price_unit"
                    style="@style/ts_orange_18"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/tv_price"
                    android:layout_marginTop="4dp"
                    android:gravity="center_vertical"
                    android:text="￥"
                    android:textColor="@color/red"/>

                <TextView
                    android:id="@+id/tv_price"
                    style="@style/ts_orange_16"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/tv_price_unit"
                    android:gravity="center_vertical"
                    android:text="89.00"
                    android:textColor="@color/red_b71c1c"/>
            </RelativeLayout>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:gravity="center_vertical|right">

            <TextView
                android:id="@+id/tv_ordertime_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/tv_ordertime"
                android:paddingBottom="1dp"
                android:paddingLeft="3dp"
                android:paddingRight="3dp"
                android:paddingTop="1dp"
                android:text="预约取"
                android:textColor="@color/white"
                android:textSize="@dimen/ts_12"/>

            <TextView
                android:id="@+id/tv_ordertime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/iv_jiajia"
                android:paddingBottom="1dp"
                android:paddingLeft="3dp"
                android:paddingRight="3dp"
                android:paddingTop="1dp"
                android:text="2015:02:32"
                android:textColor="@color/green"
                android:textSize="@dimen/ts_12"/>

            <TextView
                android:id="@+id/iv_jiajia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="3dp"
                android:paddingBottom="1dp"
                android:paddingLeft="3dp"
                android:paddingRight="3dp"
                android:paddingTop="1dp"
                android:text="已加价"
                android:textColor="@color/white"
                android:textSize="@dimen/ts_12"/>
            <TextView
                android:id="@+id/tv_item_order_arrive_pay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="3dp"
                android:paddingBottom="1dp"
                android:paddingLeft="3dp"
                android:paddingRight="3dp"
                android:paddingTop="1dp"
                android:text="到付"
                android:textColor="@color/white"
                android:textSize="@dimen/ts_12"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/common_line_height"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="8dp"
            android:background="@color/cyan_0097a7"/>

        <LinearLayout
            android:id="@+id/ll_distance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="12dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:visibility="visible">

            <ImageView
                android:id="@+id/iv_wo"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/icon_phone"/>

            <LinearLayout
                android:id="@+id/ll_send_distance"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical">

                <View
                    android:layout_width="0dp"
                    android:layout_height="3dp"
                    android:layout_marginRight="4dp"
                    android:layout_weight="1"
                    android:background="#b0b0b0"/>

                <TextView
                    android:id="@+id/tv_send_distance"
                    style="@style/ts_66_16"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="23KM"/>

                <View
                    android:layout_width="0dp"
                    android:layout_height="3dp"
                    android:layout_marginLeft="4dp"
                    android:layout_weight="1"
                    android:background="#b0b0b0"/>

            </LinearLayout>

            <ImageView
                android:id="@+id/iv_fa"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/icon_phone"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical">

                <View
                    android:layout_width="0dp"
                    android:layout_height="3dp"
                    android:layout_marginRight="4dp"
                    android:layout_weight="1"
                    android:background="#b0b0b0"/>

                <TextView
                    android:id="@+id/tv_receive_distance"
                    style="@style/ts_66_16"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="23KM"/>

                <View
                    android:layout_width="0dp"
                    android:layout_height="3dp"
                    android:layout_marginLeft="4dp"
                    android:layout_weight="1"
                    android:background="#b0b0b0"/>
            </LinearLayout>

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/icon_phone"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginTop="12dp"
            android:background="#fffbf5"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:padding="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_start"
                            style="@style/ts_66_14"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="起："/>

                        <FrameLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">



                            <TextView
                                android:id="@+id/tv_send_address"
                                style="@style/ts_66_14"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="ddd"/>

                        </FrameLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/ts_66_14"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="6dp"
                            android:text="到："/>

                        <LinearLayout
                            android:id="@+id/ll_receive_address"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:orientation="vertical"
                            android:visibility="visible"/>

                        <FrameLayout
                            android:id="@+id/fl_receive_address"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:visibility="visible">

                            <TextView
                                android:id="@+id/tv_receive_address"
                                style="@style/ts_66_14"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="6dp"
                                android:text="dddd"/>


                        </FrameLayout>
                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="@dimen/common_line_height"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:background="@color/gray_4c4c4c"
                    android:visibility="gone"/>

                <ImageView
                    android:id="@+id/iv_see_map"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:src="@drawable/icon_phone"
                    android:visibility="gone"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_alignParentBottom="true" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_voice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginTop="12dp"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:paddingBottom="8dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingTop="5dp">

            <TextView
                android:id="@+id/tv_important_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="3dp"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:lineSpacingExtra="4dp"
                android:maxLines="3"
                android:text="重要说明：接单的小哥给我电话确认一下!"
                android:textColor="@color/gray_212121"
                android:textSize="14sp"/>

            <LinearLayout
                android:id="@+id/ll_important_voice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/iv_important_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:src="@drawable/icon_phone"/>


            </LinearLayout>


        </LinearLayout>

        <TextView
            android:id="@+id/tv_rbtips"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="12dp"
            android:ellipsize="end"
            android:maxLines="3"
            android:text="需要银行卡预授权：￥3000.00"
            android:textColor="@color/gray_212121"
            android:textSize="14sp"
            android:visibility="visible"/>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp">

            <LinearLayout
                android:id="@+id/ll_designated"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:orientation="horizontal"
                android:visibility="visible"
                android:weightSum="2">

                <Button
                    android:id="@+id/btn_cancel"
                    style="@style/CommonButtonRect"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_marginRight="8dp"
                    android:layout_weight="1"
                    android:focusable="false"
                    android:text="拒绝 "
                    android:textColor="@color/white"/>

                <Button
                    android:id="@+id/btn_accept"
                    style="@style/CommonButtonRect"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="8dp"
                    android:layout_weight="1"
                    android:focusable="false"
                    android:text="接受 "/>
            </LinearLayout>

            <Button
                android:id="@+id/btn_submit"
                style="@style/CommonButtonRect"
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:layout_marginBottom="12dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:focusable="false"
                android:text="接单 "
                android:visibility="gone"/>

        </FrameLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/iv_night"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:src="@drawable/icon_phone"/>

</RelativeLayout>